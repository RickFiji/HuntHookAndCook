@page "/recipes"
@inject NavigationManager Navigation

<MudText Typo="Typo.h3" Class="ml-3">Recipes</MudText>
<br />
<MudContainer Class="mt-8 px-4" MaxWidth="MaxWidth.False">
    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" EndIcon="@Icons.Material.Filled.Settings" Href="/recipes/manage">Manage</MudButton>
    <br />
    <MudGrid>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%;">
                <MudLink Href="@($"/recipes/venison")">
                    <MudImage Src="Images/Deer1.jpg" Alt="Venison" Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.Fill" Fluid="true" />
                    <MudText Typo="Typo.h6" Class="text-center">Venison</MudText>
                </MudLink>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="12" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%">
                <MudLink Href="@($"/recipes/fish")">
                    <MudImage Src="Images/Trout1.jpg" Alt="Fish" Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.ScaleDown" Fluid="true" />
                    <MudText Typo="Typo.h6" Class="text-center">Fish</MudText>
                </MudLink>
            </MudPaper>
        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%;">
                <MudLink Href="@($"/recipes/bison")">
