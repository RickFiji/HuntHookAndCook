        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%;">
                <MudLink Href="@($"/recipes/bobcat")">
                    <MudImage Src="Images/Bobcat1.jpg" Alt="Bobcat" Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.ScaleDown" Fluid="true" />
