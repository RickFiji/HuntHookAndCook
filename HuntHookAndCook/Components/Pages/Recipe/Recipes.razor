        </MudItem>
        <MudItem xs="12" sm="6" md="4">
            <MudPaper Elevation="2" Class="pa-4" Style="height: 100%;">
                <MudLink Href="@($"/recipes/duck")">
                    <MudImage Src="Images/Duck1.jpg" Alt="Duck" Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.Fill" Fluid="true" />
                    <MudText Typo="Typo.h6" Class="text-center">Duck</MudText>
                </MudLink>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>