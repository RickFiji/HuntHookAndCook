
<MudPaper Class="mt-10 pa-5" Elevation="0" Style="@(string.Format("background-color: {0};", footerBackgroundColor))">
    <MudContainer>
    <MudGrid>
        <MudItem xs="12" md="6">
                <MudItem xs="12" md="6" Class="mb-2 d-flex align-items-center">
                <MudImage Src="Images/Logo.jpeg" Alt="Logo-Footer" Width="50" Elevation="25" Class="rounded-lg" ObjectFit="ObjectFit.Fill" Fluid="true" />
                <MudText Typo="Typo.h6" Class="ml-2">Hunt, Hook, & Cook</MudText>
            </MudItem>
            <MudItem xs="12" md="6" Class="d-flex align-items-center">
                <MudText Typo="Typo.body2">© @(DateTime.Now.Year) All rights reserved.</MudText>
            </MudItem>
        </MudItem>
        <MudItem xs="12" md="6">
            <MudText Typo="Typo.h6">Follow Us</MudText>
            <MudLink Href="https://youtube.com" Target="_blank" Class="icon-link mr-2">
                <MudIcon Icon="fab fa-youtube" Color="Color.Primary" Size="Size.Large" />
            </MudLink>
            <MudLink Href="https://open.spotify.com/show/2GvBnBxH5PsgjgVVwJvCD2?flow_ctx=02229b80-e9f8-43ba-84af-ca28aed631eb%3A1724629846" Target="_blank" Class="icon-link mr-2">
                <MudIcon Icon="fab fa-spotify" Color="Color.Primary" Size="Size.Large" />
            </MudLink>
            <MudLink Href="https://www.instagram.com/hunthookandcook/" Target="_blank" Class="icon-link mr-1">
                <MudIcon Icon="fab fa-instagram" Color="Color.Primary" Size="Size.Large" />
            </MudLink>
        </MudItem>     
    </MudGrid>
    </MudContainer>
</MudPaper>

@code {
    private string footerBackgroundColor => _isDarkMode ? Colors.Gray.Darken4 : Colors.Gray.Lighten3; //"#f7f6f3";

    [CascadingParameter] private bool _isDarkMode { get; set; }
}
